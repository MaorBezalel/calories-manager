doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Calories Manager App
    style
      | body {
      |   font-family: Arial, sans-serif;
      |   color: #333;
      |   margin: 0;
      |   padding: 0;
      | }
      | h1 {
      |   font-size: 2em;
      |   font-weight: bold;
      |   text-align: center;
      |   margin-bottom: 20px;
      | }
      | h2 {
      |   font-size: 1.8em;
      |   font-weight: bold;
      |   margin-bottom: 10px;
      | }
      | h3 {
      |   font-size: 1.4em;
      |   font-weight: bold;
      |   margin-bottom: 10px;
      | }
      | ul {
      |   list-style-type: circle;
      |   margin-left: 20px;
      |   margin-bottom: 20px;
      | }
      | li {
      |   margin-bottom: 10px;
      | }
  body
    header
      h1 Calories Manager App
    main
      block content
